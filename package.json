{
	"name": "util.settings",
	"version": "0.0.3",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Settings management singleton for a web application.",
	"debug": true,
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.settings"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.settings/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"index.*.min.js",
		"index.d.ts"
	],
	"dependencies": {
		"localforage": "^1.7.3",
		"lodash": "^4.17.11",
		"on-change": "git+https://github.com/sindresorhus/on-change.git#6ef02b403b285737466caffb3cd911ce126069ac",
		"util.join": "^0.0.25",
		"util.promise": "^0.0.27",
		"util.string": "^0.0.23",
		"util.toolbox": "^0.0.74",
		"util.wait": "^0.0.37"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-decorators": "^7.4.0",
		"@babel/plugin-transform-modules-commonjs": "^7.4.0",
		"@babel/plugin-transform-runtime": "^7.4.0",
		"@babel/preset-env": "^7.4.2",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.4.2",
		"@types/debug": "^4.1.3",
		"@types/fs-extra": "5.0.5",
		"@types/jest": "^24.0.11",
		"@types/lodash": "^4.14.123",
		"@types/node": "^11.12.1",
		"@types/power-assert": "^1.5.0",
		"autobind-decorator": "^2.4.0",
		"babel-loader": "^8.0.5",
		"babel-minify": "^0.5.0",
		"babel-plugin-espower": "^3.0.1",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.3",
		"debug": "^4.1.1",
		"express": "^4.16.4",
		"fs-extra": "^7.0.1",
		"jest": "^24.5.0",
		"power-assert": "^1.6.1",
		"prettier": "^1.16.4",
		"puppeteer": "^1.14.0",
		"tslint": "^5.14.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.4000",
		"util.fixture": "0.0.72",
		"util.log": "^0.0.43",
		"util.pkgwrap": "^0.0.108",
		"webpack": "^4.29.6",
		"webpack-cli": "^3.3.0"
	},
	"pkgwrap": {
		"cleanup": [
			"docs",
			"server.d.ts",
			"server.js.map",
			"server.js"
		]
	},
	"scripts": {
		"all": "yarn install && NODE_ENV=production yarn build && yarn docs && yarn test && yarn manifest",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:umd && yarn build:es && yarn build:cjs",
		"build:cjs": "babel index.ts --sourceType module --out-file index.cjs.min.js",
		"build:es": "minify index.js --sourceType module --out-file index.es.min.js",
		"build:umd": "pkgwrap --build --webpack",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"docs": "pkgwrap --docs",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"posttest": "npm stop",
		"pretest": "npm start",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"restart": "yarn stop && yarn start",
		"start": "[ ! `pgrep node-http-test` ] && node server.js setting-test &",
		"stop": "pkill --signal SIGINT node-http-test",
		"test": "jest --runInBand"
	}
}
