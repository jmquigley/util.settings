	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.settings"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.settings/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"prettier": "@jmquigley/prettier-config",
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"index.*.min.js",
		"index.d.ts"
	],
	"dependencies": {
		"immutable": "^4.0.0-rc.12",
		"localforage": "^1.7.3",
		"lodash": "^4.17.15",
		"on-change": "^1.6.2",
		"util.join": "^0.0.27",
		"util.promise": "^0.0.28",
		"util.string": "^0.0.36",
		"util.toolbox": "^0.0.86",
		"util.wait": "^0.0.39"
	},
	"devDependencies": {
		"@babel/cli": "^7.7.5",
		"@babel/core": "^7.7.5",
		"@babel/plugin-proposal-class-properties": "^7.7.4",
		"@babel/plugin-proposal-decorators": "^7.7.4",
		"@babel/plugin-transform-modules-commonjs": "^7.7.5",
		"@babel/plugin-transform-runtime": "^7.7.6",
		"@babel/preset-env": "^7.7.6",
		"@babel/preset-typescript": "^7.7.4",
		"@babel/runtime": "^7.7.6",
		"@jmquigley/prettier-config": "^1.0.0",
		"@types/debug": "^4.1.5",
		"@types/fs-extra": "8.0.1",
		"@types/jest": "^24.0.23",
		"@types/lodash": "^4.14.149",
		"@types/node": "^12.12.17",
		"@types/power-assert": "^1.5.2",
		"autobind-decorator": "^2.4.0",
		"babel-loader": "^8.0.6",
		"babel-minify": "^0.5.1",
		"babel-plugin-espower": "^3.0.1",
		"babel-preset-minify": "^0.5.1",
		"coveralls": "^3.0.9",
		"debug": "^4.1.1",
		"express": "^4.17.1",
		"fs-extra": "^8.1.0",
		"jest": "^24.9.0",
		"power-assert": "^1.6.1",
		"puppeteer": "^2.0.0",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.7.3",
		"util.fixture": "0.0.73",
		"util.log": "^0.0.45",
		"util.pkgwrap": "^0.0.115",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	},
	"pkgwrap": {
		"cleanup": [
			"docs",
			"server.d.ts",
			"server.js.map",
			"server.js"
		]
	},
	"scripts": {
		"all": "yarn install && NODE_ENV=production yarn build && yarn docs && yarn test && yarn manifest",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:umd && yarn build:es && yarn build:cjs",
		"build:cjs": "babel index.ts --source-type module --out-file index.cjs.min.js",
		"build:es": "minify index.js --sourceType module --out-file index.es.min.js",
		"build:umd": "pkgwrap --build --webpack",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"docs": "pkgwrap --docs",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"posttest": "npm stop",
		"pretest": "npm start",
		"prettier": "pkgwrap --prettier",
		"restart": "yarn stop && yarn start",
		"start": "[ ! `pgrep node-http-test` ] && node server.js setting-test &",
		"stop": "pkill --signal SIGINT node-http-test",
		"test": "jest --runInBand"
	}
}
